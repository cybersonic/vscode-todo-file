{
  "name": "vscode-todo-list",
  "displayName": "vscode-todo-list",
  "description": "I parse and do highlighting for todo items",
  "publisher": "markdrew",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    
    "onStartupFinished"
  ],
  "main": "./out/extension.js",

  "contributes": {
    "keybindings": [
      {
        "key": "enter",
        "command": "todo.todoSmartEnter",
        "when": "editorTextFocus && editorLangId == todo"
      }
    ],
    "languages": [
      {
        "id": "todo",
        "aliases": [
          "Todo"
        ],
        "extensions": [
          ".todo.txt"
        ],
        "configuration": "./language-configuration.json"

       
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "todo.toggleTodoDone",
          "when": "editorLangId == todo",
          "group": "navigation"
        },
        {
          "command": "todo.startPomodoroTimer",
          "when": "editorLangId == todo",
          "group": "navigation"
        }
      ]
    },
    
    "commands": [
      {
        "command": "todo.toggleTodoDone",
        "title": "Toggle Done/Undone",
        "category": "Todo"
      },
      {
        "command": "todo.startPomodoroTimer",
        "title": "Start Pomodoro Timer",
        "category": "Todo"
      }
    ]
  },
  
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/out/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "vscode-test": "vscode-test",
    "test": "jest"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.7.3"
  }
}